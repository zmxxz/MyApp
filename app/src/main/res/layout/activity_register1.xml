<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1"
    android:contextClickable="false">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <include layout="@layout/reg_title"/>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_back" />
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:inputType="number"
                android:text="用户名:"
                android:id="@+id/tv_r_userId" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/et_r_userId"
                android:hint="请输入9位以内数字"
                android:maxLength="9"
                android:inputType="numberSigned"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA"
                android:layout_alignBaseline="@+id/tv_r_userId"
                android:layout_toRightOf="@+id/tv_r_userId" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:text="密码:"
                android:id="@+id/tv_r_passwd" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/et_r_passwd"
                android:hint="请输入16位以内字符"
                android:textColorHint="#AAAAAA"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:maxLength="16"
                android:layout_alignBaseline="@+id/tv_r_passwd"
                android:layout_toRightOf="@+id/tv_r_passwd" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:text="确认密码:"
            android:id="@+id/tv_r_passwd2" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/et_r_passwd2"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_alignBaseline="@+id/tv_r_passwd2"
                android:layout_toRightOf="@+id/tv_r_passwd2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:text="校区:"
                android:id="@+id/textView13"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/gp_r_group"
                android:layout_toEndOf="@+id/textView13">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rb_r_1"
                    android:checked="true"
                    android:text="将军路"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_r_2"
                    android:text="明故宫"
                    />

            </RadioGroup>




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:text="手机号:"
            android:id="@+id/tv_r_phone" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/et_r_phone"
                android:inputType="number"
                android:textColor="#000000"
                android:layout_alignBaseline="@+id/tv_r_phone"
                android:layout_toRightOf="@+id/tv_r_phone" />

        </RelativeLayout>













    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="下一步"
        android:id="@+id/btn_register_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:background="@color/button_g"
        />
    </RelativeLayout>




</LinearLayout>