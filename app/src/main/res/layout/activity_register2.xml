<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1"
    android:contextClickable="false">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <include layout="@layout/info_title"/>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_back" />
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:orientation="vertical" >






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
    <TextView
        android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
        android:text="姓名:"
        android:id="@+id/textView10"
        android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:id="@+id/et_r_name"
                android:layout_alignBaseline="@+id/textView10"
                android:layout_toRightOf="@+id/textView10" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:text="性别："
                android:textColor="#AAAAAA"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gp_r_group2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_toRightOf="@+id/textView11">


                <RadioButton
                    android:id="@+id/rb_r_nan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="男"/>
                <RadioButton
                    android:id="@+id/rb_r_nv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="女"/>

            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

    <TextView
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        android:textColor="#AAAAAA"
        android:textSize="16sp"
        android:text="生日:"
        android:id="@+id/textView12"
        />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="请选择你的生日"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/textView12"

                android:id="@+id/tv_date" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="选择日期"
                android:textColor="#000000"
                android:background="@drawable/button_grey"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_pickDate"
                android:layout_toEndOf="@+id/tv_date"

                />;


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

    <TextView
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        android:textColor="#AAAAAA"
        android:textSize="16sp"
        android:text="学号:"
        android:id="@+id/textView15"
        />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ems="16"
                android:id="@+id/editText11"
                android:textColor="#000000"
                android:layout_alignBaseline="@+id/textView15"
                android:layout_toRightOf="@+id/textView15" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

    <TextView
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        android:textColor="#AAAAAA"
        android:textSize="16sp"
        android:text="头像："
        android:id="@+id/textView17"
        android:layout_centerHorizontal="true"
        />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="请选择你的头像"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/textView17"

                android:id="@+id/tv_headphoto" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_grey"
                android:text="插入图片"
                android:textColor="#000000"
                android:textSize="16sp"
                android:id="@+id/selectImage"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_headphoto" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:scaleType="centerCrop"
            android:id="@+id/headphoto"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        </RelativeLayout>




        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="提交"
        android:id="@+id/btn_submit"
        android:onClick="makesubmit"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:background="@color/button_g"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />





    </RelativeLayout>




</LinearLayout>