<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#ffffff"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <include layout="@layout/sd_title"/>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_back" />
        </RelativeLayout>

    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:orientation="vertical" >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="10dp" >

                    <com.example.chenjunfan.myapplication.CircleImageView
                        app:border_width="2dp"
                        app:border_color="@color/purewhite"
                        android:id="@+id/iv_psd_touxiang"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="15dp"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:id="@+id/ll_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/iv_psd_touxiang"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_psd_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张俊东"
                            android:textColor="#353535"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_psd_accout"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/ll_name"
                        android:layout_toRightOf="@id/iv_psd_touxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号：161430319"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:id="@+id/tv_sign_temp1"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="包裹内容"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_psd_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_sign_temp1"
                        android:text="一箱零食"
                        android:singleLine="true"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >

                    <TextView
                        android:id="@+id/tv_sign_temp2"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="用户位置"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_psd_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_sign_temp2"
                        android:text="二号楼"
                        android:singleLine="true"
                        android:textColor="#353535"
                        android:textSize="16sp" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >

                    <TextView
                        android:id="@+id/tv_xxx"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="悬赏积分"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_psd_jifen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_xxx"
                        android:text="0"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >

                    <TextView
                        android:id="@+id/tv_sign_temp6"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="付款方式"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_psd_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_sign_temp6"
                        android:text="寄方付款"
                        android:singleLine="true"
                        android:textColor="#353535"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/SD_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_sign_temp3"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="收件人姓名"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_psd_rname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_sign_temp3"
                        android:text="李继鹏"
                        android:singleLine="true"
                        android:textColor="#353535"
                        android:textSize="16sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/SD_phone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_sign_temp4"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="收件人手机号"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_psd_rphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:inputType="number"
                        android:layout_toRightOf="@+id/tv_sign_temp4"
                        android:text="15600000000"
                        android:singleLine="true"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/SD_address"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_sign_temp5"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="收件人地址"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_psd_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_sign_temp5"
                        android:text="南航"
                        android:singleLine="true"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >

                    <TextView
                        android:id="@+id/tv_kuaidi"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="快递"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:id="@+id/tv_psd_kuaidi"
                        android:layout_toRightOf="@+id/tv_kuaidi"
                        android:hint="顺丰快递"
                        android:layout_centerVertical="true"
                        android:text="顺丰快递"
                        android:singleLine="true"
                        android:textColor="#353535"
                        android:textSize="16sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >

                    <TextView
                        android:id="@+id/tv_sign_temp7"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="备注"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_psd_beizhu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:layout_toRightOf="@+id/tv_sign_temp7"
                        android:text="菜鸟驿站"
                        android:textColor="#353535"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="158dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/help_sd_image"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow2" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:id="@+id/rl_psd_call"
                android:visibility="visible"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    >

                    <Button
                        android:id="@+id/btn_psd_call"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="拨打电话"
                        android:onClick="psdmakecall"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:background="@color/button_g"/>

                    <Button
                        android:id="@+id/btn_psd_message"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:onClick="psdsendmsg"
                        android:text="发送短信"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:background="@color/button_g2"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_psd_finish"
                android:visibility="gone"

                >

                <Button
                    android:id="@+id/btn_help_finished"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="订单已完成"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="@color/textgrey"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>



        </FrameLayout>

    </FrameLayout>



</LinearLayout>